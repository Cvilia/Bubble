<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_circle_rectangle"
    android:minHeight="120dp"
    android:maxWidth="260dp">

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingVertical="15dp"
        android:text="需要申请定位权限"
        android:textColor="@color/text_212121"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cancleTv"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_e1e1e1"
        app:layout_constraintTop_toBottomOf="@id/contentTv"/>

    <TextView
        android:id="@+id/cancleTv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="拒绝"
        android:textSize="14sp"
        android:textColor="@color/text_424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0.5dp"
        android:layout_height="40dp"
        android:background="@color/divider_e1e1e1"
        app:layout_constraintEnd_toStartOf="@id/confirmTv"
        app:layout_constraintStart_toEndOf="@id/cancleTv"
        app:layout_constraintTop_toTopOf="@id/cancleTv" />

    <TextView
        android:id="@+id/confirmTv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="同意"
        android:textSize="14sp"
        android:textColor="@color/app_main"
        app:layout_constraintBottom_toBottomOf="@id/cancleTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/divider3" />

</androidx.constraintlayout.widget.ConstraintLayout>