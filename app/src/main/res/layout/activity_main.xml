<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page_bg"
    android:orientation="vertical"
    tools:context=".pages.home.WeatherActivity">

    <include layout="@layout/layout_home_actionbar" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.header.BezierRadarHeader
            android:id="@+id/refreshHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/locateTv"
                    style="@style/CurrentWeatherInfoTextLeft"
                    android:text="北京市"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/locateIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/locateIv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/locateTv"
                    app:layout_constraintTop_toTopOf="@id/locateTv" />

                <TextView
                    android:id="@+id/tempTv"
                    style="@style/CurrentWeatherInfoTextLeft"
                    android:layout_marginTop="20dp"
                    android:text="26℃"
                    android:textSize="40sp"
                    app:layout_constraintEnd_toStartOf="@id/tempRangeTv"
                    app:layout_constraintTop_toBottomOf="@id/locateTv" />

                <TextView
                    android:id="@+id/tempRangeTv"
                    style="@style/CurrentWeatherInfoTextRight"
                    android:layout_marginStart="10dp"
                    android:text="16/35"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tempTv"
                    app:layout_constraintStart_toEndOf="@id/tempTv" />

                <TextView
                    android:id="@+id/weatherDescTv"
                    style="@style/CurrentWeatherInfoTextLeft"
                    android:layout_marginTop="10dp"
                    android:text="多云"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/AQITv"
                    app:layout_constraintTop_toBottomOf="@id/tempTv" />

                <TextView
                    android:id="@+id/AQITv"
                    style="@style/CurrentWeatherInfoTextRight"
                    android:layout_marginStart="10dp"
                    android:text="空气质量优"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/weatherDescTv"
                    app:layout_constraintStart_toEndOf="@id/weatherDescTv" />

                <TextView
                    android:id="@+id/updateTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:text="上次更新"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/weatherDescTv"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/weatherDay7Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/weather_day_7"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/updateTimeTv" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/weatherDay7Tv" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


</LinearLayout>